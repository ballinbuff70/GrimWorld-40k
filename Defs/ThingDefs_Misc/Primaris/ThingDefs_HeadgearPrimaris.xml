<Defs>
	<!-- ======================================== Grimworld 40K Headgear ======================================== -->
	<!-- ==================== Ultramarines ==================== -->
	<!-- Mark X Helmet -->
	<ThingDef ParentName="ArmorHelmetMakeableBase">
		<defName>ODZ_40k_AS_UM_MkXHelmet</defName>
		<label>Ultramarine MK X Helmet</label>
		<description>Iconic blue helmet worn by Primaris Ultramarine.</description>
		<techLevel>Spacer</techLevel>
		<graphicData>
			<texPath>Things/Ultramarines/Primaris/Display/MkXHelmet</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>1.6</drawSize>
		</graphicData>
		<uiIconScale>1</uiIconScale>
		<!-- <stuffCategories> -->
			<!-- <li>Metallic</li> -->
		<!-- </stuffCategories> -->
		<!-- <costStuffCount>75</costStuffCount> -->
		<statBases>
			<WorkToMake>25000</WorkToMake>
			<MaxHitPoints>300</MaxHitPoints>
			<Mass>3</Mass>
			<Flammability>0.2</Flammability>
			<ArmorRating_Sharp>1.50</ArmorRating_Sharp>
			<ArmorRating_Blunt>1.10</ArmorRating_Blunt>
			<ArmorRating_Heat>1.0</ArmorRating_Heat>
			<Insulation_Cold>20</Insulation_Cold>
			<Insulation_Heat>20</Insulation_Heat>
			<EquipDelay>2</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<AimingDelayFactor>-0.30</AimingDelayFactor>
			<ShootingAccuracyPawn>1</ShootingAccuracyPawn>
		</equippedStatOffsets>
		<costList>
			<ComponentSpacer>1</ComponentSpacer>
			<Plasteel>100</Plasteel>
			<Steel>50</Steel>
			<Uranium>15</Uranium>
		</costList>
		<recipeMaker>
			<researchPrerequisite Inherit="False">Odz_Astartes_MkX_Tacticus</researchPrerequisite>
			<skillRequirements>
				<Crafting>15</Crafting>
			</skillRequirements>
			<recipeUsers>
				<li>HP_ImperialFabricationBench</li>
			</recipeUsers>
		</recipeMaker>
		<apparel>
			<useWornGraphicMask>true</useWornGraphicMask>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Ultramarines/Primaris/Headgear/MkXHelmet</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>40kUltramarines</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
	</ThingDef>
